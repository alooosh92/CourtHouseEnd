@model CourtHouse.Data.ViewModels.VMUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="regionSelect" class="control-label">المحافظة التابع لها</label>
                    <select asp-for="regionSelect" class="form-control" asp-items="@(new SelectList(Model.regionList, "id", "regionName"))">
                    </select>
                    <span asp-validation-for="regionSelect" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="userName" class="control-label">اسم المستخدم</label>
                    <input asp-for="userName" class="form-control" />
                    <span asp-validation-for="userName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="email" class="control-label">البريد الكتروني</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="phoneNumber" class="control-label">رقم الجوال</label>
                    <input asp-for="phoneNumber" class="form-control" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="password" class="control-label">كلمة السر</label>
                    <input type="password" asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Admin)<input class="form-check-input" asp-for="Admin" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.LocalAdmin)<input class="form-check-input" asp-for="LocalAdmin" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Checker)<input class="form-check-input" asp-for="Checker" />
                    </label>
                </div>
                <div class=" form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Finance)<input class="form-check-input" asp-for="Finance" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Judge)<input class="form-check-input" asp-for="Judge" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.Recorder)<input class="form-check-input" asp-for="Recorder" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.HumanResources)<input class="form-check-input" asp-for="HumanResources" />
                    </label>
                </div>
                <div class="form-group col-2">
                    <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.DataEntry)<input class="form-check-input" asp-for="DataEntry" />
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn-danger">الغاء</a>
</div>

