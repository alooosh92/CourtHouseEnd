@model CourtHouse.Models.Fees

<div class="modal fade" id="AddFees">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @Model.person.firstName @Model.person.lastName
                <hr />
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="theFinancialValue" class="control-label">قيمة الايصال</label>
                                <input asp-for="theFinancialValue" class="form-control" />
                                <span asp-validation-for="theFinancialValue" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="reasonOfPayment" class="control-label">سبب الدفع</label>
                                <input asp-for="reasonOfPayment" class="form-control" />
                                <span asp-validation-for="reasonOfPayment" class="text-danger"></span>
                            </div>
                            <div class="modal-footer">
                                <div class="form-group">
                                    <input asp-for="person.idNumber" style="display:none" class="form-control" />
                                    <input asp-for="realtyContract.id" style="display:none" class="form-control" />
                                    <input type="submit" value="إضافة" class="btn btn-primary" />                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>