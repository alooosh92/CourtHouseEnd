@model CourtHouse.Data.ViewModels.VMFees

<div class="modal fade" id="EditeFees">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @Model.person.firstName @Model.person.lastName
                <hr />
            </div>
            <form asp-action="AddPayment" enctype="multipart/form-data">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <input type="hidden" asp-for="realtyContract.id" />
                    <div class="form-group">
                        <label asp-for="TheFinancialValue" class="control-label">قيمة الايصال</label>
                        <input asp-for="TheFinancialValue" class="form-control" disabled />
                        <span asp-validation-for="TheFinancialValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="reasonOfPayment" class="control-label">سبب الدفع</label>
                        <input asp-for="reasonOfPayment" class="form-control" disabled />
                        <span asp-validation-for="reasonOfPayment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="financialNoticeNumber" class="control-label">رقم ايصال الدفع</label>
                        <input asp-for="financialNoticeNumber" class="form-control" />
                        <span asp-validation-for="financialNoticeNumber" class="text-danger"></span>
                    </div>
                    <h4 style="color:red">على الصورة أن لايتجاوز حجمها 200 كيلوبايت</h4>
                    <div class="form-group">
                        <label asp-for="paymentImage" class="control-label">صورة الايصال</label>
                        <input type="file" accept="image/jpeg, image/jpg" asp-for="paymentImageUrl" class="form-control"/>
                        <span asp-validation-for="paymentImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


