@model IEnumerable<CourtHouse.Models.Realty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Index</h1>
<div id="modalshow"></div>
<p>
    <a data-toggle="ajax-modal" data-target="#ShowPopup" data-url="@Url.Action("AddRealty","Realty")" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                رقم العقار
            </th>
            <th>
                المنطقة
            </th>            
            <th>
                نوع العقار
            </th>
            <th>
                العنوان بالتفصيل
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.realtyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" style="color: #17a2f8"><i class="bi bi-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.id" style="color: #17a2f8"><i class="bi bi-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.id" style="color: #17a2f8"><i class="bi bi-x-circle"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
