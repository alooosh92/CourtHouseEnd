@model CourtHouse.Models.Beneficiary
<div class="modal fade" id="ShowPopup">
    <div class="modal-dialog">
        <div class="modal-content text-right">
            <form asp-action="ScheduleASession">
                <div class="modal-header">
                    <h2>الرجاء تحديد تاريخ الجلسة للسيد :@Model.person.firstName @Model.person.lastName</h2>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="SessionDate" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" asp-for="id" class="form-control" />
                    <input type="submit" value="جدولة" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>
